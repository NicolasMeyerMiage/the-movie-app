<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="fr.mbds.squad.idbdata.data.Movie" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.movie.MovieDetailFragment">


        <TextView
            android:id="@+id/movie_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.name}"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/movie_detail_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{movie.overview}"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="75dp"
            app:layout_constraintTop_toBottomOf="@id/movie_detail_name"
            app:layout_constraintEnd_toEndOf="@id/movie_detail_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>