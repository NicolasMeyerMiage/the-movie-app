<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="fr.mbds.squad.movieapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_MovieFragment"
            app:destination="@id/movie_home" />
    </fragment>

    <fragment
        android:id="@+id/movie_home"
        android:name="fr.mbds.squad.movieapp.ui.movie.MovieFragment"
        android:label="@string/title_movies">
        <argument
            android:name="catId"
            app:argType="string" />
        <argument
            android:name="catName"
            app:argType="string" />
        <action
            android:id="@+id/action_MovieFragment_to_MovieDetailFragment"
            app:destination="@id/movie_detail" />
    </fragment>

    <fragment
        android:id="@+id/movie_detail"
        android:name="fr.mbds.squad.movieapp.ui.movie.MovieDetailFragment"
        android:label="@string/title_detail_movie">
        <argument
            android:name="movieId"
            app:argType="string"/>
        <argument
            android:name="movieName"
            app:argType="string"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="fr.mbds.squad.movieapp.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="fr.mbds.squad.movieapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>